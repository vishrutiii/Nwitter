
<!-- Post a tweet -->
<div class="post-tweet-container">
    <div class="profile-pic-container">
        <img src="<%= locals.userLoggedIn.profilePic %>" alt="User's profile pic" class="profile-pic">
    </div>
    <div class="post-tweet">
        <textarea id="postTextarea" name="tweet" cols="30" rows="10" placeholder="Trending"></textarea>
        <button id="tweetButton" type="submit" class="btn" disabled>Tweet</button>
    </div>
</div>

