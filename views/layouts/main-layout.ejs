    <script src="/javascript/showNotifications.js"></script>
    <% locals.jsfiles.forEach(function(file) { %> 
        <script src="<%= file %> "></script>
    <% }) %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.11/cropper.min.js"></script>
    <script src="/javascript/clientSocket.js"></script>
